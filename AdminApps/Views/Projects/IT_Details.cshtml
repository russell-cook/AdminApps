@model AdminApps.Models.ITProjectVM

@{
    ViewBag.Title = "IT Project Detail";
    //ViewBag.ModuleName = "Project Management";
}

<h2>@Html.DisplayFor(model => model.Name)</h2>

<div class="row">
    <div class="col col-md-4">
        <h3>Description</h3>
        @Html.DisplayFor(model => model.Description)
    </div>
    <div class="col col-md-4">
        <h3>Status</h3>
        @Html.DisplayFor(model => model.Status)
    </div>
    <div class="col col-md-4">
        <h3>Date Created</h3>
        @Html.DisplayFor(model => model.CreatedAt)
    </div>

</div>

<div id="ganttContainer" style="width: 100%; height: 500px;"></div>

<p>@Html.ActionLink("Back to List", "IT", null, new { @class = "btn btn-default btn-sm" })</p>


<script src="~/Scripts/init-gantt.js"></script>

<script type="text/javascript">
    // load Gantt data
    gantt.load("/Projects/GetGanttData/" + @Model.ID, "json");
    // enable dataProcessor for automatic saving
    var dp = new dataProcessor("/Projects/Save/" + @Model.ID);
    dp.init(gantt);
</script>