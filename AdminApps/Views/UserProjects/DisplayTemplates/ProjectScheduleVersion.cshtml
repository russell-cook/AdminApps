@model AdminApps.Models.ProjectScheduleVersion

@*disclaimer for previous schedule version*@
@if (Model.VersionNum != 1)
{
    <text>
        <div class="panel panel-danger">
            <div class="panel-heading">
                <div class="row">
                    <div class="col-md-8">
                        <h4>Archived Schedule | @Html.DisplayNameFor(model => model.SavedAt): @Html.DisplayFor(model => model.SavedAt)</h4>
                    </div>
                    <div class="col-md-4">
                        <p class="text-right">
                            @Html.ActionLink("Return to Current Project Schedule", "Details", new { id = ViewBag.ProjectID }, new { @class = "btn btn-default btn-sm" })
                        </p>
                    </div>
                </div>
            </div>
            <div class="panel-body">
                <p class="text-danger"><small><strong>NOTE:</strong> You are currently viewing an archived version of this project's schedule. To restore this version as the current Project Schedule click <a href="javascript:$('#confirmRestoreArchivedScheduleVersionModal').modal('show')">Restore Archived Project Schedule</a></small></p>
        </text>

}

        <div class="row">
            <div class="col-md-4">
                <p class="small">
                    <strong>@Html.DisplayNameFor(model => model.SavedAt):</strong>
                    @Html.DisplayFor(model => model.SavedAt)
                </p>
            </div>
            <div class="col-md-4">
                <p class="small">
                    <strong>@Html.DisplayNameFor(model => model.Comments):</strong>
                    @Html.DisplayFor(model => model.Comments)
                </p>
            </div>
            <div class="col-md-4">
                <p class="small text-right">
                    @Html.ActionLink("Edit Schedule (Full Screen)", "EditScheduleFS", new { id = ViewBag.ProjectID })
                </p>
            </div>
        </div>

        @{ Html.RenderPartial("_GanttToolbar"); }

        @*gantt container*@
        <div class="row">
            <div class="col-md-12">
                <div id="ganttContainer" style="width: 100%; height: 400px;"></div>
            </div>
        </div>


        @if (Model.VersionNum != 1)
        {
            @:</div>
            @:</div>
}



