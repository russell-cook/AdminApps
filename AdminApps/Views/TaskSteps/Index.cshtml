@model IEnumerable<AdminApps.Models.TaskStep>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table>
    <tr>
        <th></th>
        <th>
            Name
        </th>
        <th>
            Instructions
        </th>
        <th>
            DeskManualTask
        </th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.ID }) |
            @Html.ActionLink("Details", "Details", new { id=item.ID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.ID })
        </td>
        <td>
			@item.Name
        </td>
        <td>
			@item.Instructions
        </td>
        <td>
			@(item.DeskManualTask == null ? "None" : item.DeskManualTask.Name)
        </td>
    </tr>
}

</table>


