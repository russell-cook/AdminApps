@model IEnumerable<AdminApps.Models.BillReview>

@{
    ViewBag.Title = "Unread Bill Reviews";
    ViewBag.ModuleName = "Bill Tracking";
}

<h2>@ViewBag.Title</h2>

<p>The following table lists unread Bill Reviews submitted by @ViewBag.SubmittedByRole level users within your @ViewBag.SubmittedForAgency</p>
<table class="table table-striped table-condensed">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Bill.CompositeBillNumber)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Bill.Summary)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FirstOrDefault().CreatedByUser.FullName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FirstOrDefault().CreatedByUserInDiv.CompositeDivName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FirstOrDefault().CreatedAt)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Recommendation.Description)
        </th>
        <th>Total Impact</th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
               @Html.ActionLink(item.Bill.CompositeBillNumber, "Details", "Bills", new { id = item.Bill.ID }, null)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Bill.Summary)
            </td>
            <td>
                @Html.DisplayFor(model => item.CreatedByUser.FullName)
            </td>
            <td>
                @Html.DisplayFor(model => item.CreatedByUserInDiv.CompositeDivName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CreatedAt)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Recommendation.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FiscalImpactTotal)
            </td>
            <td>
                @Html.ActionLink("View", "Details", new { id = item.ID }, new { @class = "btn btn-default btn-xs" })
            </td>
        </tr>
    }

</table>
