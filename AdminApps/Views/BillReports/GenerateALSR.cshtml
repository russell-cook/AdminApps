@model AdminApps.ViewModels.AlsrReportSelectBillReviewsViewModel

@{
    ViewBag.Title = "Agency Legislative Status Report";
    ViewBag.ModuleName = "Bill Tracking";
}

<h2>Agency Legislative Status Report</h2>

@using (Html.BeginForm())
{
    <table class="table">
        <tr>
            <th>
                Include in Report
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BillReviews.FirstOrDefault().CompositeBillNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BillReviews.FirstOrDefault().VersionNum)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BillReviews.FirstOrDefault().CreatedByUserFullName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BillReviews.FirstOrDefault().Recommendation)
            </th>
        </tr>

        @Html.EditorFor(model => model.BillReviews)

    </table>

    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            @Html.LabelFor(model => model.GovOfficeDeliveryDate, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.GovOfficeDeliveryDate, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.GovOfficeDeliveryDate, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-12">
                <input type="submit" value="Generate ALSR Report" class="btn btn-success" />
            </div>
        </div>
    </div>

}

