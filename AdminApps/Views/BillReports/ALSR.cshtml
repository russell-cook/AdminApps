@model IEnumerable<AdminApps.Models.BillsAlsrReport>

@{
    ViewBag.Title = "DocumentsViewsList";
    ViewBag.ModuleName = "Bills";
}

<h2>Agency Legislative Status Reports (ALSR)</h2>

<p>
    @Html.ActionLink("Generate New ALSR Report", "GenerateALSR")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.FirstOrDefault().GovOfficeDeliveryDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FirstOrDefault().CreatedAt)
        </th>
        <th>
            Created By
        </th>
        <th>
        </th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.GovOfficeDeliveryDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CreatedAt)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CreatedByUser.FullNameLastFirst)
        </td>
        <td>
            @Html.ActionLink("Download PDF", "DownloadAlsr", new {  id = item.ID })
        </td>
    </tr>
}

</table>
