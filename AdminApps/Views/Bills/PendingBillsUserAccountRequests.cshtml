@model ICollection<AdminApps.ViewModels.BillsUserAccountRequestViewModel>
@{
    ViewBag.Title = "Pending User Account Requests";
    ViewBag.ModuleName = "Bill Tracking";
}

<h2>@ViewBag.Title</h2>

<table class="table table-striped table-condensed">
    <tr>
        <th>
            Requested By
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FirstOrDefault().FullName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FirstOrDefault().RoleName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FirstOrDefault().RequestedAt)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr class="@(item.Fulfilled ? "success" : "")">
            <td>
                @Html.DisplayFor(modelItem => item.RequestedByUser.FullName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FullName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RoleName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RequestedAt)
            </td>
            <td>
                @Html.ActionLink("Fulfill", "Create", "UsersAdmin", new { billsUserAccountRequestID = item.ID }, new { @class = "btn btn-success btn-sm" })
            </td>


        </tr>
    }

</table>
